@page
@using ProductStoreAPI
@model ProductStoreAPI.Pages.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Login</title>
</head>
<body>
<div>
    <h1>Login</h1>
    <h4>@WebApiApp.AppName</h4>
    <form method="post">
        <p>
            <label>Username</label><br/>
            <input type="text" name="username"/>
        </p>
        <p>
            <label>Password</label><br/>
            <input type="password" name="password"/>
        </p>
        <input type="submit" value="Login"/>
    </form>
</div>
</body>
</html>